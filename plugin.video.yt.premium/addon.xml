<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="plugin.video.yt.premium"
       name="YouTube Premium"
       version="0.0.2"
       provider-name="Diggz, Joel">
  <requires>
    <import addon="xbmc.python" version="3.0.0"/>
	<import addon="plugin.video.youtubek2"/>
  </requires>
  <extension point="xbmc.python.pluginsource" library="default.py">
    <provides>video</provides>
  </extension>
  <extension point="xbmc.addon.metadata">
    <summary lang="en_GB">Minimal YouTube-style with hard-coded categories and search. No login required.</summary>
    <description lang="en_GB">Browse Trending, Music, Gaming, News, Movies, Live, and Search. Plays via the official YouTube add-on if present.</description>
    <platform>all</platform>
    <reuselanguageinvoker>true</reuselanguageinvoker>
    <assets>
      <icon>resources/media/icon.png</icon>
      <fanart>resources/media/fanart.jpg</fanart>
    </assets>
  </extension>
</addon>
